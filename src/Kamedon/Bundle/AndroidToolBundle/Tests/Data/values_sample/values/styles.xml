<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:imageButtonStyle">@style/Widget.Button</item>
        <item name="android:seekBarStyle">@style/Widget.SeekBar</item>
    </style>

    <style name="Widget" />

    <style name="Widget.Button" parent="android:Widget.Button">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/scrubber_progress</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/scrubber_control</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <!-- Window animation -->
    <style name="Animation" />

    <style name="Animation.SubMenu">
        <item name="android:windowEnterAnimation">@anim/show_submenu</item>
        <item name="android:windowExitAnimation">@anim/hide_submenu</item>
    </style>

</resources>